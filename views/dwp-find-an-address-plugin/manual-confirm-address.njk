{% extends "layouts/main.html" %}

{% block pageTitle %}
  Confirm address - GOV.UK Prototype Kit
{% endblock %}

{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript: window.history.go(-1)"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        Confirm address
      </h1>
      
      {% if addressLine1 %}
        <p class="govuk-inset-text">{{addressLine1}}{{' ' + addressLine2 if addressLine2}}{{', ' + townCity + ', ' + postcode }}</p>
      {% elif data.address %}
        <p class="govuk-inset-text">{{data.address}}</p>
      {% else %}
        <p class="govuk-inset-text">{{addressData | first}}</p>
      {% endif %}

      {{ govukButton({
        text: "Use this address",
        href: data.find_an_address_exit_url | d("/")
      }) }}

      <p class="govuk-body"><a href="/dwp-find-an-address-plugin" class="govuk-link">Find an address</a></p>
      <p class="govuk-body govuk-!-margin-bottom-0"><a href="/dwp-find-an-address-plugin/manual-entry" class="govuk-link">Enter address manually</a></p>
    </div>
  </div>

{% endblock %}
